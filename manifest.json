{
    "name": "ChatGPT Chrome Extension",
    "version": "0.1.0",
    "description": "ChatGPT Chrome Extension. Expect bugs for now. Created for the Arcade Hackathon!",
    "manifest_version": 3,
    "author": "Felix Gao",
    "action":{
        "default_popup": "index.html",
        "default_title": "Ask ChatGPT"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api.openai.com/v1/chat/completions",
        "https://jamsapi.hackclub.dev/openai/chat/completions"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self';"
      }
}